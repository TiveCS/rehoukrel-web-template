{
  "name": "rehoukrel-backend-template",
  "version": "1.0.50",
  "module": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "dev": "bun run --watch src/index.ts",
    "auth:generate": "bun x @better-auth/cli@latest generate --config src/infra/auth/index.ts --output src/infra/sql/schemas/auth.schema.ts -y",
    "auth:secret": "openssl rand -base64 32",
    "db:generate": "bun drizzle-kit generate",
    "db:up": "bun drizzle-kit up",
    "db:drop": "bun drizzle-kit drop",
    "db:push": "bun drizzle-kit push",
    "db:studio": "bun drizzle-kit studio",
    "db:migrate": "bun drizzle-kit migrate",
    "compose:reset": "podman compose down -v && podman compose up -d"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "better-auth": "^1.4.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "elysia": "1.4.18",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "bun-types": "1.3.4",
    "drizzle-kit": "^0.31.8",
    "ts-node": "^10.9.2"
  }
}
